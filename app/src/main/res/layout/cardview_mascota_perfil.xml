<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvMascotaPerfil"
    android:paddingRight="25dp"
    android:paddingLeft="25dp"
    android:paddingBottom="25dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    card_view:cardCornerRadius="@dimen/cardview_mascota_radio"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/cardview_mascota_padding">
        <ImageView
            android:layout_gravity="center_horizontal"
            android:id="@+id/imgFotoCVPerfil"
            android:layout_width="@dimen/mascota_perfil_tamano_foto"
            android:layout_height="@dimen/mascota_perfil_tamano_foto"
            android:scaleType="fitXY"
            android:src="@drawable/dog_footprint_48"
            />

        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:paddingRight="@dimen/cardview_padding_nombre"
                android:id="@+id/tvCantidadLikePerfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="right"
                android:text="@string/cardview_cantidad_like"
                android:textSize="@dimen/cardview_perfil_cantidad"
                android:textStyle="bold"
                />

            <ImageView
                android:layout_gravity="right"
                android:id="@+id/imgIndicadorLikesPerfil"
                android:layout_width="@dimen/cardview_image_size_hueso_perfil"
                android:layout_height="@dimen/cardview_image_size_hueso_perfil"
                android:src="@drawable/dog_bone_color_48"
                />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>