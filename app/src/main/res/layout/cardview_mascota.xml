<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvMascota"
    android:paddingRight="25dp"
    android:paddingLeft="25dp"
    android:paddingBottom="25dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    card_view:cardCornerRadius="@dimen/cardview_mascota_radio"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/cardview_mascota_padding">
        <LinearLayout
            android:id="@+id/llImagen"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center_horizontal"
                android:id="@+id/imgFotoCV"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:scaleType="fitXY"
                android:src="@drawable/dog_footprint_48"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btnLike"
                    android:layout_width="@dimen/cardview_image_size_hueso"
                    android:layout_height="@dimen/cardview_image_size_hueso"
                    android:background="@drawable/dog_bone_48"/>


                <TextView
                    android:paddingLeft="@dimen/cardview_padding_nombre"
                    android:id="@+id/tvNombreMascota"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:text="@string/cardview_nombre_mascota"
                    android:textSize="@dimen/cardview_nombre_tamano"
                    android:textStyle="bold"
                    />
            </LinearLayout>
            <LinearLayout
                android:gravity="right"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:paddingRight="@dimen/cardview_padding_nombre"
                    android:id="@+id/tvCantidadLike"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:gravity="right"
                    android:text="@string/cardview_cantidad_like"
                    android:textSize="@dimen/cardview_nombre_tamano"
                    android:textStyle="bold"
                    />

                <ImageView
                    android:layout_gravity="right"
                    android:id="@+id/imgIndicadorLikes"
                    android:layout_width="@dimen/cardview_image_size_hueso"
                    android:layout_height="@dimen/cardview_image_size_hueso"
                    android:src="@drawable/dog_bone_color_48"
                    />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>